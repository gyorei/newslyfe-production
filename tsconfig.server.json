{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "declaration": false,
    "noEmit": false,
    "allowJs": true,
    "baseUrl": ".",
    "paths": {
      "@server/*": ["src/backend/server/*"],
      "@license/*": ["src/backend/license/*"]
    }
  },
  "include": [
    "src/backend/**/*",
    "src/backend/**/*.json",
    "src/backend/**/*.jsonc"
  ],
  "exclude": ["node_modules", "dist", "src/frontend/**/*"]
}
