{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "ESNext",
    "moduleResolution": "node", // Módosítva "bundler"-ről "node"-ra
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx", // Ellenőrizd, hogy ez az érték van beállítva
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "typeRoots": [
      "./node_modules/@types",
      "./src/backend/types"
    ]
  },
  "include": ["src", "vite.config.ts", "src/vite-env.d.ts"],
  "exclude": [
    "src/utils/cache/memory.ts", // Ezt a fájlt kizárjuk a TypeScript ellenőrzésből
    "**/*.cjs" // Minden .cjs kiterjesztésű fájl kizárása
  ]
}
